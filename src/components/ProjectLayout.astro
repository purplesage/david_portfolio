---
const { project } = Astro.props;
---

<div
	class="mt-10 h-full rounded-xl border-2 border-blue-600 bg-neutral-900/60 sm:mx-auto sm:w-3/4 lg:w-1/3"
>
	<div class="flex flex-col items-center gap-5">
		<img
			class="rounded-t-xl border-b-2 border-blue-600"
			src={project.image}
			alt="project image"
		/>
		<div class="p-3">
			<div class="mb-5 flex flex-col items-center">
				<h3 class="text-2xl font-bold tracking-wide text-blue-600 underline">
					{project.title}
				</h3>
				<p class="text-center text-xs text-neutral-500 sm:text-sm">
					{project.description}
				</p>
			</div>
			<ul
				class="flex flex-col items-center text-sm text-neutral-400 sm:text-base"
			>
				{project.techs.map((tech: unknown) => <li>{tech}</li>)}
			</ul>
		</div>
	</div>
	<div class="my-5 flex justify-evenly">
		<a
			href={project.liveLink}
			target="_blank"
			rel="noopener noreferrer"
			class="text rounded-xl border-2 border-blue-600 bg-neutral-700 py-2 px-4 text-xs text-neutral-300 hover:bg-blue-600 hover:text-white"
			>Live View</a
		>
		<a
			href={project.githubLink}
			target="_blank"
			rel="noopener noreferrer"
			class="text rounded-xl border-2 border-neutral-200 bg-neutral-700 py-2 px-4 text-xs text-neutral-300 hover:bg-neutral-200 hover:text-neutral-800"
			>CÃ³digo</a
		>
	</div>
</div>
