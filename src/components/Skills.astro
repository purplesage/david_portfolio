---
import LightBublbSVG from '../components/LighbulbSVG.astro';
import HtmlSVG from './HtmlSVG.astro';
import JavascriptSVG from './JavascriptSVG.astro';
import CssSVG from './CssSVG.astro';
import PhpSVG from './PhpSVG.astro';
---

<section
	class="mx-auto mt-10 w-11/12 lg:mt-20 xl:mt-28 xl:w-full"
	id="conocimientos"
>
	<div class="flex items-center gap-2">
		<LightBublbSVG />
		<h2 class="w-fit border-b-2 border-blue-600 text-lg font-bold lg:text-2xl">
			Conocimientos
		</h2>
	</div>

	<div
		class="mt-12 flex flex-col space-y-5 sm:mx-auto sm:w-3/4 md:gap-10 lg:h-full lg:w-full lg:flex-row lg:justify-center lg:space-y-0"
	>
		<div
			class="flex -translate-x-1/3 flex-col items-center rounded-xl bg-gradient-to-t from-blue-700 via-blue-500 to-blue-400 p-5 opacity-0 transition duration-1000 intersect:translate-x-0 intersect:opacity-100"
		>
			<HtmlSVG />
			<h3
				class="mt-2 mb-5 text-2xl font-bold [text-shadow:_0_1px_0_rgb(0_0_0_/_50%)]"
			>
				HTML
			</h3>
			<ul
				class="flex flex-col items-center text-sm text-blue-200 [text-shadow:_0_1px_0_rgb(0_0_0_/_50%)] md:w-32 lg:w-36 lg:text-base xl:w-52"
			>
				<li>Semantic markup</li>
				<li>Manejo de formas</li>
				<li>Gr√°ficos</li>
				<li>Media</li>
				<li>S.E.O.</li>
			</ul>
		</div>
		<hr class="mx-auto w-4/5 border border-neutral-700 sm:hidden" />
		<div
			class="flex -translate-x-1/3 flex-col items-center rounded-xl bg-gradient-to-t from-blue-700 via-blue-500 to-blue-400 p-5 opacity-0 transition duration-[1400ms] intersect:translate-x-0 intersect:opacity-100"
		>
			<JavascriptSVG />
			<h3
				class="mt-2 mb-5 text-2xl font-bold [text-shadow:_0_1px_0_rgb(0_0_0_/_50%)]"
			>
				Javascript
			</h3>
			<ul
				class="flex justify-center gap-10 text-base text-blue-200 [text-shadow:_0_1px_0_rgb(0_0_0_/_50%)] lg:w-36 xl:w-52"
			>
				<div class="flex flex-col">
					<li>Vue</li>
					<li>React</li>
					<li>Redux</li>
					<li>Zustand</li>
				</div>
				<div class="flex flex-col">
					<li>NextJS</li>
					<li>Vite</li>
					<li>AstroJS</li>
					<li>InertiaJS</li>
				</div>
			</ul>
		</div>
		<hr class="mx-auto w-4/5 border border-neutral-700 sm:hidden" />

		<div
			class="flex -translate-x-1/3 flex-col items-center rounded-xl bg-gradient-to-t from-blue-700 via-blue-500 to-blue-400 p-5 opacity-0 transition duration-[1800ms] intersect:translate-x-0 intersect:opacity-100"
		>
			<CssSVG />
			<h3
				class="mt-2 mb-5 text-2xl font-bold [text-shadow:_0_1px_0_rgb(0_0_0_/_50%)]"
			>
				CSS
			</h3>
			<ul
				class="flex flex-col items-center text-base text-blue-200 [text-shadow:_0_1px_0_rgb(0_0_0_/_50%)] lg:w-36 xl:w-52"
			>
				<li>PostCSS</li>
				<li>Tailwind</li>
				<li>Sass</li>
				<li>Mui</li>
			</ul>
		</div>
		<hr class="mx-auto w-4/5 border border-neutral-700 sm:hidden" />

		<div
			class="flex -translate-x-1/3 flex-col items-center rounded-xl bg-gradient-to-t from-blue-700 via-blue-500 to-blue-400 p-5 opacity-0 transition duration-[2200ms] intersect:translate-x-0 intersect:opacity-100"
		>
			<PhpSVG />
			<h3
				class="mt-2 mb-5 text-2xl font-bold [text-shadow:_0_1px_0_rgb(0_0_0_/_50%)]"
			>
				PHP
			</h3>
			<ul
				class="flex flex-col items-center text-base text-blue-200 [text-shadow:_0_1px_0_rgb(0_0_0_/_50%)] lg:w-36 xl:w-52"
			>
				<li>Laravel</li>
				<li>Blade</li>
				<li>Mysql</li>
				<li>OOP</li>
			</ul>
		</div>
	</div>
</section>
